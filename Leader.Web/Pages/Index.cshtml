@page
@model IndexModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Index"];
}

<div class="container">

    <h2>@ViewData["Title"]</h2>
    <h5>@ViewData["BuildInfo"]</h5>
    <div class="row">
        <div class="col-md-8">
            <span class="text-danger">@ViewData["Message"]</span>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div><label asp-for="Input.Search"></label></div>
                    <div>
                        <input asp-for="Input.Search" class="form-control" />
                    </div>
                    @*<div>
                            <span asp-validation-for="Input.Search" class="text-danger"></span>
                        </div>*@
                    <div>
                        <button type="submit" class="btn btn-default">@localizer["Go"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}