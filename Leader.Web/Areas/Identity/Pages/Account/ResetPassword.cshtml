@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ResetPasswordModel
@{
    ViewData["Title"] = localizer["Reset password"];
}



<div class="container">

    <div class="title">@ViewData["Title"]</div>
    <br />

    <form method="post">
        <fieldset>
            <legend>@localizer["EReset your password"]</legend>
            <div asp-validation-summary="All" class="error-summary"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="error"></span>
            </div>
            <button type="submit" class="btn">@localizer["Reset"]</button>
        </fieldset>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
