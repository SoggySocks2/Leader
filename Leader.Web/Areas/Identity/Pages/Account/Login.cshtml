@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Smeat.Leader.Web.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = localizer["Log in"];
}

<div class="container">

    <div class="title">@ViewData["Title"]</div>
    <br />
    
        <form method="post">
            <fieldset>
                <legend>@localizer["Enter your credentials"]</legend>
                <div asp-validation-summary="All" class="error-summary"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="error"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group" style="align-items: end">
                    <button type="submit" class="btn">@localizer["Log in"]</button>
                </div>
                <div class="form-group form-group-links">
                    <p>
                        <a asp-page="./ForgotPassword">@localizer["Forgot your password?"]</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@localizer["Register as a new user"]</a>
                    </p>
                </div>
            </fieldset>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
