@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model Smeat.Leader.Web.Areas.Identity.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container">

    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <h4>@localizer["Edit you profile"].</h4>
                <span class="text-danger">@ViewData["Message"]</span>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" readonly />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Firstname"></label>
                    <input asp-for="Input.Firstname" class="form-control" />
                    <span asp-validation-for="Input.Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Lastname"></label>
                    <input asp-for="Input.Lastname" class="form-control" />
                    <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">@localizer["Save"]</button>
            </form>
        </div>
    </div>

</div>
